.classify-content {
  display: flex;
  padding-bottom: 56rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}
.classify-content .item {
    width: 160rpx;
  display: flex;
  flex-direction: column;
  color: #fff;
  margin-right: 30rpx;
  position: relative;
}
.classify-content .item .switch {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.classify-content .item .classify-img {
  width: 160rpx;
  height: 160rpx;
}
.classify-content .item .classify-name {
  margin-top: 20rpx;
}
.swiper {
  width: 100%;
  height: 220rpx
}
.list {
  height: 220rpx !important;
  width: 160rpx !important;
  padding-right: 30rpx !important;
}
