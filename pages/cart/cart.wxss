page{
  background: #282828;
}
.hot-sell-content{
  
  /* height: 240rpx; */
  padding-left: 46rpx;
  padding-bottom: 500rpx;
}
.hot-sell-content .list{
  display: flex;
  background: #2b323b;
  border-radius: 30rpx;
  margin-right: 46rpx;
  position: relative;
  margin-top: 60rpx;
 
}
.hot-sell-content .list navigator{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.hot-sell-content .list  .book-img{
  width: 170rpx;
  height: 260rpx;
  border-radius: 30rpx;
  margin-left: 34rpx;
  margin-top: -30rpx;
}
.hot-sell-content .list  .book-img .bookimg{
  width: 100%;
  height: 100%;
}
.hot-sell-content .list .list-right{
  width: 460rpx;
  margin-left: 30rpx;
}
.hot-sell-content .list .list-right .list-right-t{
  padding-right: 40rpx;
  margin-top: 30rpx;
}
.hot-sell-content .list .list-right .list-right-t .bookauthor{
  font-size: 24rpx;
  color: #5d637c;
}
.hot-sell-content .list .bookname{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.hot-sell-content .list .bookname text{
  color: #fff;
  font-size: 36rpx;
  margin-bottom: 20rpx;
}
.hot-sell-content .list .bookname image{
  vertical-align: middle;
    width: 36rpx;
    height: 10rpx;
}
.hot-sell-content .list .list-right .list-right-b{
 font-size: 48rpx;
 color: #ff1d8d; 
 margin-top: 30rpx;
 padding-right: 26rpx;
 margin-bottom: 50rpx;
 overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
}
.hot-sell-content .list .list-right .list-right-b .line{
  width: 334rpx;
  margin-bottom: 10rpx;
  height: 2rpx;
  background: rgba(255, 255, 255, 0.2);
}

.footer{
  padding-top: 60rpx;
  height: 220rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #282e37;
}
.footer .jine{
  margin-bottom: 48rpx;
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 46rpx;
  color: #fff;
}
.footer .jine text{
  color: #de1e7f;
}
.footer .buy{
  width: 100%;
  padding: 54rpx 0;
  color: #fff;
  background: #fb6894;
  text-align: center;
}

