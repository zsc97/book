@import "../../assets/style/iconfont.wxss";
.container {
  background: #21272e;
  padding: 0 0 0 46rpx;
}
.bookdetail {
  padding-right: 46rpx;
  padding-top: 30rpx;
  display: flex;
}
.bookdetail image {
  margin-right: 30rpx;
  width: 218rpx;
  height: 360rpx;
  display: block;
  background: #000;
  border-radius: 20rpx;
}
.bookdetail-right {
  width: 400rpx;
  margin-top: 40rpx;
}
.book-name {
  font-size: 48rpx;
  color: #fff;
  margin-bottom: 26rpx;
}
.book-author,
.book-intro {
  font-size: 30rpx;
  color: #868dab;
  margin-bottom: 26rpx;
}
.book-intro {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.book-fen{
    font-size: 40rpx;
    color: #ffce44;
}
.options{
    margin-top: 60rpx;
    font-size: 30rpx;
    color: #ccc;
    border-top: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
    padding: 50rpx 0;
    display: flex;
    justify-content: space-between;
}
.collect{

}
.options icon{
    margin-right: 20rpx;
}
.share{

}
.put-in{
    margin-right: 46rpx;
}
