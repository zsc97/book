.container{
    background: #21272e;
    padding-bottom: 240rpx;
}
.personal-infor{
    padding: 0 46rpx;
    background: #21272e;
   
}
.personal-ingor-t{
    display: flex;
}
.personal-img{
    width: 240rpx;
    height: 240rpx;
    border-radius: 50%;
    overflow: hidden;
    background: #000;
    margin-right: 40rpx;
}
.personal-img image{
    width: 100%;
    height: 100%;
}
.personal-right{
    width: 370rpx;
    color: #fff;
    margin-top: 30rpx;
}
.personal-right .name{
    font-size: 44rpx;
    margin-bottom: 20rpx;
}
.personal-right .addr{
    font-size: 28rpx;
    color: #b5b7c5;
}
.personal-right .atte-share{
    margin-top: 46rpx;
    display: flex;
    font-size: 26rpx;
    justify-content: space-between;
}
.personal-right .atte-share .share{
    padding: 16rpx 36rpx;
    display: flex;
    border: 1px solid #b5b7c5;
    border-radius: 20rpx;
    align-items: baseline;
}
.personal-right .atte-share .share icon{
    font-size: 26rpx;
    margin-right: 16rpx;
    margin-top: -20rpx;
}
.personal-ingor-b{
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
    margin-top: 54rpx;
    height: 130rpx;
    background:rgb(43, 50, 59);
}
.personal-ingor-b .attention{
    display: flex;
    flex-direction: column;
    text-align: center;
}
.personal-ingor-b .line{
    height: 100rpx;
    width: 2rpx;
    background: rgb(54, 60, 69);
}
.personal-ingor-b .attention .attention-num{
    font-size: 36rpx;
    color: #fff;
}
.personal-ingor-b .attention .attention-text{
    font-size: 24rpx;
    color: rgb(117, 128, 141);
}

.products{
    margin-top:64rpx;
    padding-left: 46rpx;
}
.products-title{
    display: flex;
    justify-content: space-between;
    color: #fff;
}
.products-title-l{
    font-size: 36rpx;
}
.products-title-r{
    font-size: 24rpx;
    color: rgb(58, 106, 165);
}
.bookdetail {
    padding-right: 46rpx;
    padding-top: 50rpx;
    display: flex;
    padding-bottom: 50rpx;
    border-bottom: 1px solid rgb(38, 44, 52);
  }
  .bookdetail image {
    margin-right: 30rpx;
    width: 180rpx;
    height: 260rpx;
    display: block;
    background: #000;
    border-radius: 20rpx;
  }
  .bookdetail-right {
    width: 400rpx;
    margin-top: 30rpx;
  }
  .book-name {
    font-size: 48rpx;
    color: #fff;
    margin-bottom: 10rpx;
  }
  .book-author,
  .book-intro {
    font-size: 30rpx;
    color: #868dab;
    margin-bottom: 16rpx;
  }
  .book-author{
      color: rgb(71, 140, 224);
  }
  .book-intro {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  .book-fen{
      font-size: 40rpx;
      color: #ffce44;
  }
  .book-fen icon{
      color: rgb(251, 104, 148);
  }
  .book-fen text{
      margin-left:32rpx;
  }
